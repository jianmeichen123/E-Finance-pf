<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
<meta name="format-detection" content="telephone=no"/>  
<title>多省汇</title>
<meta name="keywords" content="多省汇">
<meta name="description" content="多省汇">
<link rel="stylesheet" href="/css/reset.css" />
<link rel="stylesheet" href="/css/fenlei.css" />
<link rel="stylesheet" href="/css/foot.css" />
<script src="/js/jquery-1.10.1.min.js" ></script>
<script type="text/javascript">
	function loadcat(catid, a) {
	
		$('#sectab').html('')
		$('#tb_').find('a').attr('class', 'normaltab')
		$(a).addClass('hovertab')
		$.ajax({
			url:'/cat/load?catid='+catid,
			dataType:'json'
		}).done(function(data){
		
			$.each(data, function(i, n){
		       if( n.image==null){
		         n.image="load.jpg";
		       }
				var html = '<a href="/product?catid='+n.sclassid
						+'"><img src="http://bj.dosaing.com/upload/'+ n.image +'"><br>'+n.sclassname+'</a>'
				$('#sectab').append(html)
			})
		})
	}
	
	function search() {
		/* var text = $('#searchText').val()||''
		if(text!='') {
			$('#sectab').find('a').hide()
			$.each($('#sectab').find('a:contains("'+text+'")'), function(i, n){
				$(n).show()
			})
		} */
		
		var form = $('<form action = "/product/search" method = "post"></form>')
		$('body').append(form)
		var text = $('#searchText').val()||''
		if(text!='') {
			var input = $('<input type="hidden" name="word" value="'+text+'">')
			form.append(input)
			form.submit()
		}
	}
</script>
</head>

<body>
<div class="tanchu">
	<div class="toumingbg"></div> 
	<div class="menu">
	     <a href="/user">个人中心</a>
	     <a href="javascript:alert('开发中，敬请期待')">账目录入</a>
	     <a href="/settle/list">结算中心</a>
	     <a href="javascript:alert('开发中，敬请期待')">农贸均价</a>  
	</div>
</div>
<header>
  <nav>
     <div class="set"><a href="javascript:;" id="setbtn"><img src="/images/fenlei01.png"></a></div>
     <div class="search" style="cursor:pointer;" onclick="search()"><input id="searchText" name="key" type="text" placeholder="请输入商品名称"></div>
  </nav>
</header>
<div class="main">
	<div class="main-left" id="tb_">
		<ul>
			#for(cat : firstcats)
			<li><a href="javascript:;" onClick='loadcat("${cat.bclassid}", this)' class="
			#if(for.index==1)
				hovertab
			#else
				normaltab
			#end
			">${cat.bclassname}</a></li>
			#end
		</ul>
	</div>
  	<div class="main-right">
		<div class="tab-list">
			<div class="dis" id="sectab">
				#for(cat : secondcats)
			    <a href="/product?catid=${cat.sclassid}"><img src='
					#if(cat.image=='')
						http://bj.dosaing.com/upload/load.jpg
					#else
						${request.getAttribute("config.img.prefix") }${cat.image}
					#end
					'>
			    
			    <br>${cat.sclassname}</a>
			    #end
			</div>
		</div>
	</div>
</div>


<footer>
    <div class="daohang1">
      <a href="/cat" class="nav1">商品分类</a>
      <a href="/product/common" class="nav2">常用商品</a>
      <a href="/cart" class="nav3">购物车</a>
      <a href="/order/list" class="nav4">订单管理</a>
      <a href="/user" class="nav5">个人中心</a>    
    </div>
</footer>
<script type="text/javascript">
$('#setbtn').click(function(){
	$('.tanchu').show();
	$('.menu').slideToggle(500);
	$('.toumingbg,.menu a').click(function(){
		$('.tanchu').hide();
		$('.menu').hide();
	});
});
</script>
</body>
</html>
